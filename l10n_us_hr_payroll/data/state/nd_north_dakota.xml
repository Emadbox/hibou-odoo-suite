        <field name="code">us_nd_suta_wage_base</field>
        <field name="country_id" ref="base.us"/>
    </record>
    <data noupdate="1">
        <record id="rule_parameter_us_nd_suta_wage_base_2020" model="hr.rule.parameter.value">
